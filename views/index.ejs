<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>DirtCraft Worths</title>
    <link rel="icon" type="image/png" href="https://i.imgur.com/urgzbbr.png">
    <link rel="stylesheet" href="/css/index.css"/>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
</head>
<body>
<header>
    <div class="header">
        <a href="/">DirtCraft Worths</a>
    </div>
    <div class="menu">
        <span onclick="openNav()" class="material-symbols-outlined">menu</span>
    </div>
</header>
<div class="wrapper">
    <div class="inner-wrapper">

    </div>
</div>
<div id="sidebar" class="sidenav">
    <div class="close">
        <span class="material-symbols-outlined" onclick="closeNav()">close</span>
    </div>
</div>
<template id="server">
    <a href="" class="server">
        <div class="server-image">
            <img src="" alt="">
        </div>
        <div class="server-name">
            <p></p>
        </div>
    </a>
</template>
<template id="sidebar-entry">
    <a href="" class="sidebar-entry"></a>
</template>
<script>
    const servers = <%- JSON.stringify(serverNames); %>;
    const wrapper = document.querySelector('.inner-wrapper');
    const sidebar = document.getElementById("sidebar");

    for (const server of servers) {
        const serverElem = document.getElementById('server').content.cloneNode(true);
        serverElem.querySelector('a').href = `/${server.server}`;
        serverElem.querySelector('.server-name p').innerText = server.display_name;
        serverElem.querySelector('.server-image img').src = server.logo;
        wrapper.appendChild(serverElem);

        const sidebarElem = document.getElementById('sidebar-entry').content.cloneNode(true);
        sidebarElem.querySelector('a').href = `/${server.server}`;
        sidebarElem.querySelector('a').innerText = server.display_name;
        sidebar.appendChild(sidebarElem);
    }

    function openNav() {
        document.getElementById("sidebar").style.width = "100%";
    }

    function closeNav() {
        document.getElementById("sidebar").style.width = "0";
    }
</script>
</body>
</html>